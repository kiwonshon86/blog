# Base site URL used in RSS, sitemap, and structured data helpers
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# === Giscus comments configuration ===
# The GitHub repository that will host discussions (format: owner/repo)
NEXT_PUBLIC_GISCUS_REPO=
# The repository ID generated when you install Giscus on the repository
NEXT_PUBLIC_GISCUS_REPO_ID=
# The discussion category name that will store comments
NEXT_PUBLIC_GISCUS_CATEGORY=
# The ID of the discussion category above
NEXT_PUBLIC_GISCUS_CATEGORY_ID=
# Optional overrides. Leave empty to use defaults defined in `src/lib/giscus.ts`
NEXT_PUBLIC_GISCUS_MAPPING=
NEXT_PUBLIC_GISCUS_STRICT=
NEXT_PUBLIC_GISCUS_REACTIONS_ENABLED=
NEXT_PUBLIC_GISCUS_EMIT_METADATA=
NEXT_PUBLIC_GISCUS_INPUT_POSITION=
NEXT_PUBLIC_GISCUS_THEME=
NEXT_PUBLIC_GISCUS_LANG=
NEXT_PUBLIC_GISCUS_LOADING=
